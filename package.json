{
	"name": "eap-thesis-hub",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "run-p lint:* --aggregate-output --continue-on-error --silent",
		"fix": "run-s fix:* --continue-on-error --silent",
		"lint:eslint": "eslint . --cache",
